@model IEnumerable<TruYum_WebApp.Models.MenuItem>

@{
    ViewBag.Title = "Index";
}

<h2>Menu items</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayName("Free Delivery")
        </th>
        <th>
            @Html.DisplayName("Price")
        </th>
        <th>
            @Html.DisplayName("Category")
        </th>
        <th>
            @Html.DisplayName("Action")
        </th>



        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.dateOfLaunch < DateTime.Today && item.Active == true)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.freeDelivery)
                </td>
                <td>
                    Rs.@Html.DisplayFor(modelItem => item.price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.category)
                </td>

                <td>
                    @Html.ActionLink("Add To Cart", "AddToCart", new { id = item.Id })

                </td>
            </tr>
        }
    }

</table>
