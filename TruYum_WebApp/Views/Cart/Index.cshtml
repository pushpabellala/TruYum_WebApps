@model IEnumerable<TruYum_WebApp.Models.MenuItem>

@{
    ViewBag.Title = "My Cart";
}

<h2>View Cart</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayName("Free Delivery")
        </th>
        <th>
            @Html.DisplayName("Price")
        </th>


        <th>
            @Html.DisplayName("Action")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                Rs.@Html.DisplayFor(modelItem => item.freeDelivery)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>

            <td>
                @Html.ActionLink("Remove", "Delete", new { id = item.Id })

            </td>
        </tr>
    }
    <tr>
        <td><b>Total: </b></td>
        <td colspan="100%">
            Rs.@ViewData["total"].ToString()
        </td>
    </tr>
</table>

<div>
    @Html.ActionLink("View Menu Items", "Index", "MenuItem")
</div>